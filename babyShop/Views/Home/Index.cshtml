@model IEnumerable<babyShop.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" style="margin-bottom:50px;">
        <div class="item active">
            <div class="desc"></div>
            <img src="https://brand.assets.adidas.com/image/upload/f_auto,q_auto,fl_lossy/viVN/Images/running-ss20-faster-than-educate-plp-mh-mini-ub20-d_tcm337-446751.jpg" alt="Los Angeles" style="height:450px;">
        </div>

        <div class="item">
            <div class="desc"></div>
            <img src="https://brand.assets.adidas.com/image/upload/f_auto,q_auto,fl_lossy/viVN/Images/running-ss20-faster-than-sustain-hp-masthead-small-sl20-1-d_tcm337-451262.jpg" alt="Chicago" style="height:450px;">
        </div>

        <div class="item">
            <div class="desc"></div>
            <img src="https://brand.assets.adidas.com/image/upload/f_auto,q_auto,fl_lossy/viVN/Images/superstar-blackpink-mh-d_tcm337-466373.jpg" alt="New york" style="height:450px;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<diV class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4" style="height:600px">
            <div class="thumbnail">
                <a href="/products/Details/@item.Id"><img src="@item.Thumbnail" alt="@item.Name"></a>
                <div class="caption" style="height: 200px">
                    <h3>@item.Name</h3>
                    <p>@item.Price</p>
                    @using (Ajax.BeginForm("AddToCart", "ShoppingCart",
                    new AjaxOptions
                    {
                        HttpMethod = "POST"
                    }))
                    {
                        <input type="hidden" name="quantity" min="1" max="9" step="1" value="1" />
                        <input type="hidden" value="@item.Id" name="productId" />
                        <input type="Submit" value="Thêm vào giỏ hàng" class="btn btn-primary" />
                    }
                </div>
            </div>
        </div>
    }
</diV>

