@{ 
    babyShop.Models.ShoppingCart shoppingCart = Session["SHOPPING_CART"] as babyShop.Models.ShoppingCart;
    var count = 0;
    if (shoppingCart != null)
    {
        count = shoppingCart.Items.Count;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Baby Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sản Phẩm", "ShowProducts", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Danh mục<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Quần áo bé trai ", "showByCategory", new { category = "boyclothes" })</li>
                            <li>@Html.ActionLink("Quần áo bé gái ", "showByCategory", new { category = "girlsclothes" })</li>
                            <li>@Html.ActionLink("Giày bé trai ", "showByCategory", new { category = "boyshoes" })</li>
                            <li>@Html.ActionLink("Giày bé gái ", "showByCategory", new { category = "girlsshoes" })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Giới thiệu", "About", "Home")</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right" style="margin-left:100px;">
                    <li><a href="/ShoppingCart/ShowCart"><span style="font-size:15px;" class="glyphicon glyphicon-shopping-cart" aria-hidden="true">@if (count != 0) { @count }</span></a></li>
                </ul>

                @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                {
                    <div class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" class="form-control" name="searchKey" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-default">Search</button>
                    </div>
                }


            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Scripts/jquery.unobtrusive-ajax.min.js" )></script>
    @RenderSection("scripts", required: false)
</body>
</html>
